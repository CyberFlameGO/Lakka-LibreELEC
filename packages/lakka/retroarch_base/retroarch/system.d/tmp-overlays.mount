[Unit]
Description=Overlays directory
Before=retroarch.service umount.target
Conflicts=umount.target
After=systemd-tmpfiles-setup.service
DefaultDependencies=no

[Mount]
What=none
Where=/tmp/overlays
Type=overlay
Options=lowerdir=/usr/share/retroarch-overlays,upperdir=/storage/custom/overlays,workdir=/storage/.tmp/overlays-workdir

[Install]
WantedBy=retroarch.service
