[Unit]
Description=Joypad configs directory
Before=retroarch.service umount.target
Conflicts=umount.target
After=systemd-tmpfiles-setup.service
DefaultDependencies=no

[Mount]
What=none
Where=/tmp/joypads
Type=overlay
Options=lowerdir=/etc/retroarch-joypad-autoconfig,upperdir=/storage/custom/joypads,workdir=/storage/.tmp/joypads-workdir

[Install]
WantedBy=retroarch.service
